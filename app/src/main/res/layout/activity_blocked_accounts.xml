<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlockedAccounts"
    android:orientation="vertical"
    android:background="@color/white"
    >

    // toolbar
    <include
        android:id="@+id/toolbar_babysitter"
        layout="@layout/toolbar_babysitter"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
        />

    //no blocked accounts text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="You have no blocked accounts"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:visibility="gone"
        android:id="@+id/tvNoBlockedAccounts"
        />



    / Babysitter List
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/BabysitterListView"
        android:divider="#4B000000"
        android:dividerHeight="0.5dp"
        android:launchMode="singleTop"
        android:layout_marginTop="40dp"
        />


</LinearLayout>